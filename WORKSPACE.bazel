  name = "com_google_googleapis",
  strip_prefix = "googleapis-97763d6efb2d35474e0363c254ee6994837a08fa",
  urls = ["https://github.com/googleapis/googleapis/archive/97763d6efb2d35474e0363c254ee6994837a08fa.zip"],
