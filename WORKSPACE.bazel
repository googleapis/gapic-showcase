  name = "com_google_protobuf",
  sha256 = "8c901bfafa86e425c509b19ea2d2c5091e402e8005991bf621ceb5f6fd612870",
  urls = ["https://github.com/protocolbuffers/protobuf/archive/v33.5.zip"],
